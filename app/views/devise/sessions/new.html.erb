<div class="form-devise">
  <h2 class="center-tx">Inciar sesión</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-s-off-2 col-s-8">
        <b><%= f.label :email %></b>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-ctr space-v" %>
      </div>
    </div>
    <div class="row">
      <div class="col-s-off-2 col-s-8">
        <b><%= f.label :password, 'Password' %></b>
        <%= f.password_field :password, autocomplete: "current-password", class:"input-ctr space-v" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col-s-off-2 col-s-8">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'recordarme' %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-s-off-2 col-s-8">
        <%= f.submit 'Inicia sesión', class:"btn default space-v" %>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
