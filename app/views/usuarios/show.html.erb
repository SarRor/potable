<p>
  <b>Nombre:</b> <%= @usuario.nombre %>
</p>

<% if user_signed_in? and current_user.is_admin? %>
  <%= link_to 'Editar usuario', edit_usuario_path(@usuario) %> |
<% end %>
<br>

<h3>Pagos realizados: <%= @usuario.pagos.count %> </h3>
<h2>Realizar pago</h2>

<%= form_with(model: Pago.new, url: pagos_path ) do |f| %>
  <%= hidden_field_tag :id, @usuario.id %>
  <div class="row">
    <div class="col-s-off-2 col-s-8">
      <b><%= f.label :cantidad %></b>
      <%= f.text_field :cantidad, autocomplete: "cantidad", autofocus: true, class:"input-ctr space-v", maxlength: 5, required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-s-off-2 col-s-8">
      <b><%= f.label :fecha_de_pago %></b>
      <%= f.date_field :fecha_de_pago, autocomplete: "fecha_de_pago", class:"input-ctr space-v", required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-s-off-2 col-s-8">
      <b><%= f.label :concepto %></b>
      <%= f.text_field :concepto, autocomplete: "concepto", class:"input-ctr space-v", maxlength: 80, required: true %>
    </div>
  </div>

  <%= hidden_field_tag :clave_de_usuario, @usuario.id %>
  <div class="row">
    <div class="col-s-off-2 col-s-8">
      <%= f.submit 'Realizar pago', class:"btn default space-v" %>
    </div>
  </div>
<% end %>
